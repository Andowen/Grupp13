@model WebApplicationGrupp13.Models.EducationalPost

@{
    ViewBag.Title = "Create";
}
@if (Request.IsAuthenticated) {
    <h2>Create</h2>


    using (Html.BeginForm("Create", "EducationalBlogPosts", FormMethod.Post, new { enctype = "multipart/form-data" })) {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Utbildningsinlägg</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.category, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.DropDownListFor(model => model.category, new SelectList(ViewBag.CategoryList))
            @Html.ValidationMessageFor(model => model.category, "", new { @class = "text-danger" })
            @Html.ActionLink("Skapa ny kategori", "Create", "EducationalPostCategories")
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.title, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.postText, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.postText, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.postText, "", new { @class = "text-danger" })

            <input type="file" id="file" name="file">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lägg upp" class="btn btn-default" />
        </div>
    </div>
</div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
} else {
    <h1>Du måste logga in för att komma åt denna sida!</h1>
}

