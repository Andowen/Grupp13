@model IEnumerable<WebApplicationGrupp13.Models.EducationalPostCategory>

@{
    ViewBag.Title = "Kategorier";
}

<h2>Kategorier för utbildning</h2>

<p>
    @Html.ActionLink("Lägg till ny kategori", "Create")
</p>
<table class="table">
 
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.category)
            </td>
            <td>

                @Html.ActionLink("Ta bort", "Delete", new { id = item.category })
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Tillbaka till skapa inlägg", "Create", "EducationalBlogPosts")
</div>

