@model IEnumerable<WebApplicationGrupp13.Models.InformalBlogPost>

@{
    ViewBag.Title = "Index";
}
@using WebApplicationGrupp13.Controllers

@if (Request.IsAuthenticated) {
    <h2>Anslagstavla</h2>
    <p>
        @Html.ActionLink("Skapa nytt blogginlägg", "Create")
    </p>
    var Model1 = Model.OrderByDescending(c => c.id);
    int counter = 1;
    foreach (var item in Model1) {

        <div class="formalBlogPost" id="@item.id">
            @{counter = counter + 1;}
            <div class="formalBlogPostContent">
                @{
                    var time = FormalBlogPostsController.GetDateFromDateTime(item.dateTime);

                    var imageSrc = FormalBlogPostsController.GetProfilePictureFromUsername(item.creator);
                }
                <h3>@Html.DisplayFor(modelItem => item.title)<span class="authorTime">@time</span></h3>
                <h6>@Html.DisplayFor(modelItem => item.category)</h6>
                <p>@Html.DisplayFor(modelItem => item.postText)</p>
                <span class=" authorTime"><img src="~/Image/@imageSrc" style="height:70px; width:auto;"></span>
                <br />
            </div>
            <div class="blogButtons">
                @if (item.fileName != null) {
                    <a href="~/InformalBlogPostUploads/@item.fileName" download>@item.fileName</a>
                }
                @if (item.creator.Equals(User.Identity.Name)) {

                    <p>
                        @Html.ActionLink("Se inlägg", "Details", new { id = item.id }) | @Html.ActionLink("Redigera", "Edit", new { id = item.id }) | @Html.ActionLink("Ta bort", "Delete", new { id = item.id })
                        <span class="authorTime">
                            @Html.DisplayFor(modelItem => item.creator)
                        </span>
                    </p>
                } else {
                    <p>
                        @Html.ActionLink("Se inlägg", "Details", new { id = item.id })
                    </p>
                }
                @{
                    InformalBlogPostCommentsController commentsController = new InformalBlogPostCommentsController();
                }

            </div>
            @foreach (var comment in commentsController.GetComments(item.id, "Informal")) {
                var commentTime = FormalBlogPostsController.GetDateFromDateTime(comment.dateTime);
                <div class="formalBlogPostComment" id="@counter">


                    <p>@comment.commentText</p>
                    <p class="formalBlogPostCommentAuthor">@comment.author | @commentTime</p>
                </div>

            }

            @{ int id = item.id;
                int textBoxId = id + 999;
                string textBoxIdString = textBoxId.ToString();}
            @Html.TextArea(textBoxIdString, null, new { placeholder = "Skriv en kommentar", id = textBoxIdString, rows = "3", cols = "1000" })


            <button id="@item.id" onClick="reply_click(this.id)">Skicka</button>
        </div>
        <script src="~/Scripts/jquery-3.4.1.js"></script>

        <script>
       var urlpath = '@Url.Action("CreateComment", "InformalBlogPostComments")';

        </script>
        <script type="text/javascript">

            $(function () {



                $('#btnStart').on('click', function () {
