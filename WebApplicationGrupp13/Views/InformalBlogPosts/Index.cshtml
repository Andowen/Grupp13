            });
            });
            function reply_click(clicked_id) {
                var clicked_id_int = parseInt(clicked_id);
                var commentId = clicked_id_int += @textBoxId - 1;
                console.log(commentId)
                var commentTxt = document.getElementById(commentId).value;


                console.log(clicked_id);
                $.ajax({
                    type: 'POST',
                    url: urlpath,
                    data: JSON.stringify({ blogPostId: clicked_id, blogPostType: "Informal", commentText: commentTxt }),
                    dataType: 'json',
                    contentType: 'application/json; charset=utf-8',
                })


                location.reload();
            }
        </script>
    }

    @*</table>*@
} else {
    <h1>Du måste logga in för att komma åt denna sida!</h1>
}
