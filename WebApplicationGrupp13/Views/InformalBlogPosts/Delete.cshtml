@model WebApplicationGrupp13.Models.InformalBlogPost
@using WebApplicationGrupp13.Controllers


@{
    ViewBag.Title = "Radera";
    var Name = FormalBlogPostsController.GetNameFromUsername(Model.creator);
}

<h2>Radera inlägg</h2>

<div class="row">
    <div class="col-md-8">
        <h3>Är du säker på att du vill ta bort detta inlägg?</h3>
    </div>
    <div class="col-md-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Radera inlägg" class="btn btn-default" /> |
                @Html.ActionLink("Tillbaka till Anslagstavlan", "Index")
            </div>
        }
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-8">
        <h4>@Html.DisplayFor(model => model.title)</h4>
        <p>Publicerat av <span class="authorName">@Html.Raw(Model.creator.Equals(User.Identity.Name) ? "dig" : Name)</span> på Anslagstavlan @Html.DisplayFor(model => model.dateTime)</p>
    </div>
</div>
<div class="row">
    <div class="col-sm-8">
        @Html.DisplayFor(model => model.postText)
    </div>
</div>
