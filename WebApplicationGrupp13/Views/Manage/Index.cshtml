@model WebApplicationGrupp13.Models.IndexViewModel
@{
    ViewBag.Title = "Redigera dina uppgifter";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Användaruppgifter:</dt>
        <dd>@Html.ActionLink("Redigera", "EditUserInformation")</dd>

        <dt>Lösenord:</dt>
        <dd>

            @if (Model.HasPassword)
            {
                @Html.ActionLink("Redigera", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }

        </dd>
    </dl>
</div>
