@model WebApplicationGrupp13.Models.NotificationSettingViewModel
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Aviseringsinställningar";
}

<h2>Aviseringsinställningar</h2>
<p>Välj vilken typ av aviseringar du vill ha</p>
<hr />
@using (Html.BeginForm("EditSettings", "Notification", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.UserNotiId)
    <div class="row">
        <div class="col-md-12">
            <p>@Html.CheckBoxFor(model => model.Formal)  Information</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p>@Html.CheckBoxFor(model => model.Informal)  Anslagstavlan</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p>@Html.CheckBoxFor(model => model.Education)  Utbildning</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p>@Html.CheckBoxFor(model => model.Research)  Forskning</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p>@Html.CheckBoxFor(model => model.Calender)  Mötesinbjudningar</p>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <input type="submit" class="btn btn-default" value="Spara ändringar" />
        </div>
    </div>
}



