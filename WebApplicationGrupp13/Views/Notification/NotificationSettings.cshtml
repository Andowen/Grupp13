@model WebApplicationGrupp13.Models.NotificationSettingViewModel
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Aviseringsinställningar";
}

<h2>Aviseringsinställningar</h2>
<p>Välj vilken typ av aviseringar du vill ha</p>
<hr />
@using (Html.BeginForm("EditSettings", "Notification", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
   @Html.HiddenFor(model => model.UserNotiId)
    <div class="row">
        <div class="col-md-1">
            <p>Information</p>
        </div>
        <div class="col-md-8">
            @Html.CheckBoxFor(model => model.Formal)
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">
            <p>Anslagstavlan</p>
        </div>
        <div class="col-md-8">
            @Html.CheckBoxFor(model => model.Informal)
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">
            <p>Utbildning</p>
        </div>
        <div class="col-md-8">
            @Html.CheckBoxFor(model => model.Education)
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">
            <p>Forskning</p>
        </div>
        <div class="col-md-8">
            @Html.CheckBoxFor(model => model.Research)
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <input type="submit" class="btn btn-default" value="Spara ändringar" />
        </div>
    </div>
}



