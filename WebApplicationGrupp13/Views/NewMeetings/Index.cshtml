@model IEnumerable<WebApplicationGrupp13.Models.Meetings>
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <title>Möten</title>
</head>
<body>
    <p>
        @Html.ActionLink("Skapa nytt möte", "Create")
    </p>

    @*@using (Html.BeginForm("Index", "NewMeetings", FormMethod.Post))*@
    @using (Html.BeginForm())
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.meetingName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.date1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.date2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.date3)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.creator)
                </th>
                <th></th>
            </tr>
  

            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.meetingName)
                    </td>
                    <td>
                        @*@Html.RadioButton("RadioButton1", objectValue, true)*@
                        @Html.DisplayFor(modelItem => item.date1)
                    </td>
                    <td>
                        @*@Html.RadioButton("RadioButton2", item.Id)*@
                        @Html.DisplayFor(modelItem => item.date2)
                    </td>
                    <td>
                        @*@Html.RadioButton("RadioButton3", item.Id)*@
                        @Html.DisplayFor(modelItem => item.date3)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.creator)
                    </td>

                </tr>
            }

        </table>
        <input class="btn btn-default" type="submit" value="Rösta"
               new { onclick="return confirm('Din röst är skickad')" } />
    }


</body>
</html>
